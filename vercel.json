{
    "version": 2,
    "builds": [
      {
        "src": "Frontend/src",
        "use": "@now/static-build",
        "config": {
          "distDir": "Frontend/build"
        }
      },
      {
        "src": "Backend/src",
        "use": "@now/node",
        "config": {
          "distDir": "Backend/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/Frontend/build/$1"
      },
      {
        "src": "/api/(.*)",
        "dest": "/Backend/build/$1"
      }
    ]
  }